<div class="badass-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Place Details</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :url %>
    <%= f.input :phone_number %>
    <%= f.input :description %>
    <br />
    <%= f.submit "Create", :class => 'btn btn_primary' %>
  <% end %>
</div>